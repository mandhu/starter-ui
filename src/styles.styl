/* You can add global styles to this file, and also import other style files */
* {
    margin: 0;
    box-sizing: border-box
}
html, body {
    height: 100%;
    font-family: Roboto, "Helvetica Neue", sans-serif;
}
a, p, i {
    color: var(--main-text-color)
}

.navigation-overlay {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 169;
    opacity: 0;
    background-color: rgba(0, 0, 0, .3);
}
.breadcrumbs {
    .root-link {
        font-size: 1rem;
        font-weight: 600;
        letter-spacing: .25px;
        line-height: normal;
        margin-left 6px;
        color var(--nav-header-color);
        text-decoration none
    }
    .steps {
        font-weight: 400;
        font-size: 0.8rem;
        color var(--nav-header-color);
    }
}
.underline-hover {
    &:hover {
        text-decoration underline
    }
}
.aside-nav-items {
    display flex;
    flex-direction column
    padding: 24px 0;
    .menu-heading {
        padding: 0 1em 1em 1.4em;
        font-size 1.2em
        color var(--main-text-color-1) //#475569
    }
    .aside-item {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding: 12px 24px;
        font-size: 13px;
        font-weight: 500;
        line-height: 20px;
        text-decoration: none;
        outline none;
        cursor pointer;
        transition: background-color 375ms cubic-bezier(.25,.8,.25,1);
        .icon {
            color: var(--main-text-color-3) //#97a6ba;
            margin-right: 16px;
            width 20px
            line-height 21px;
            font-size 16px
            transition: color 375ms cubic-bezier(.25,.8,.25,1);
        }
        .name {
            color: var(--main-text-color-1) //#475569;
            font-size: 13px;
            font-weight: 500;
            line-height: 20px;
            transition: color 375ms cubic-bezier(.25,.8,.25,1);
            &.small {
                font-size: 12px;
                font-weight: 400;
                line-height 16px
            }
        }
        &.active {
            background-color: var(--nav-active-background) //#e2e8f0;
            .icon {
                color var(--main-text-color-1) //#64748b
            }
            .name {
                color var(--main-text-color) //#1a202e
            }
        }
        &:hover {
            background-color: var(--nav-hover-background)
            .icon {
                color var(--main-text-color-1) //#64748b
            }
            .name {
                color var(--main-text-color) //#1a202e
            }
        }
    }
    .collapse-item {
        padding: 10px 16px 10px 64px;
    }
}
.page-action-header {
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    padding 1em 0
}
/*****
  UTILS
 ******/
.container {
    max-width 1600px
    margin 0 auto
    padding-left 1em;
    padding-right 1em
}
.no-outline {
    outline none
}
.flex {
    flex 1 1 auto;
}
.d-flex {
    display flex;
}
.row {
    display flex
    flex-direction row
}
.column {
    display flex
    flex-direction column
}
.j-start {
    justify-content start
}
.j-end {
    justify-content end
}
.j-center {
    justify-content center
}
.j-between {
    justify-content space-between
}
.a-start {
    align-items start
}
.a-end {
    align-items end
}
.a-center {
    align-items center
}
.mr-1 {
    margin-right 1em!important
}
.br-small {
    border-radius 4px!important
}
.br-medium {
    border-radius 8px!important
}
.br-large {
    border-radius 16px!important
}
.w-100 {
    width 100%;
}
.w-500 {
    width: 500px;
}
.form-padding {
    padding 1em 2em
}
.light-button {
    background-color var(--light-button)!important
}
.table-wrapper {
    width 100%
    border-radius 8px;
    overflow hidden
    box-shadow: var(--table-box-shadow);
}
.dialog-header {
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    padding: .8em 1.5em .8em 2em;
    background-color var(--table-header-background);
    .title {
        font-size: 1.3rem;
        font-weight: 500;
        letter-spacing: 0.25px;
        line-height: normal;
        color: var(--nav-header-color);
        text-decoration: none;
    }
}
