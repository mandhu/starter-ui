.title {
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: .25px;
    line-height: normal;
    padding-inline-end: 16px;
    margin-left 6px;
    color var(--nav-header-color);
}

.avator {
    width: 34px;
    height 34px;
    border-radius: 50%;
    margin-left: 1rem;
    &:hover {
        cursor pointer;
    }
    img {
        width 100%
        border-radius: 50%;
    }
}

.profile {
    img {
        max-width: 100px;
        margin: 0 auto;
        margin-bottom: 1rem;
        margin-top: 8px;
    }
    .profile-data {
        margin: 0 auto;
        margin-bottom: 1rem;
        p {
            margin-bottom: 0;
        }
        small{
            opacity 0.7;
        }
    }
}
