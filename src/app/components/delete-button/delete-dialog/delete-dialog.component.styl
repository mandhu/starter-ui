.modal {
    display: flex;
    position: relative;
    flex-direction: column;
    justify-content: center;
    box-sizing: border-box;
    padding: 0 24px 8px;
    .header {
        padding-top 30px;
        .title {
            font-size: 20px;
            font-weight: 500;
            letter-spacing: .005em;
            margin 0 0 10px 0;
        }
    }
    .content {
        display flex
        align-items center
        flex-wrap wrap
        i {
            font-size: 25px;
            margin-top: 12px;
            margin-right: 8px;
        }
        .desc {
            font-size 1rem;
            margin-top 12px;
        }
    }
    .action {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        margin-top: 2rem;
        padding-bottom 1em
    }
}
